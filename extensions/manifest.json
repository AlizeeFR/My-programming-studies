{
    "manifest_version": 3,
    "name": "YouTube Auto Pause",
    "version": "1.0",
    "description": "Automatically pause and unpause YouTube videos after a specified time.",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png"
      }
    },
    "permissions": ["tabs", "activeTab", "scripting", "storage", "offscreen", "background"],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "icons": {
      "16": "icon16.png"
    }
  }
  